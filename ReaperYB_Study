<script>
    let timerInterval;
    let focusTime = 60; // ÙˆÙ‚Øª Ø§Ù„ØªØ±ÙƒÙŠØ² Ø¨Ø§Ù„Ø¯Ù‚Ø§Ø¦Ù‚
    let breakTime = 15; // ÙˆÙ‚Øª Ø§Ù„Ø±Ø§Ø­Ø© Ø¨Ø§Ù„Ø¯Ù‚Ø§Ø¦Ù‚
    let isFocusMode = true; // ÙŠØ¨Ø¯Ø£ Ø¨ÙˆØ¶Ø¹ Ø§Ù„ØªØ±ÙƒÙŠØ²
    let minutes = focusTime, seconds = 0;
    let isTimerRunning = false;

    function updateClockDisplay() {
        const timerText = document.getElementById('timerText');
        timerText.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;

        const timerDisplay = document.getElementById('timerDisplay');
        const totalSeconds = (isFocusMode ? focusTime : breakTime) * 60;
        const elapsedSeconds = totalSeconds - (minutes * 60 + seconds);
        const percentage = (elapsedSeconds / totalSeconds) * 100;

        timerDisplay.style.background = `conic-gradient(
            ${isFocusMode ? '#FFC107' : '#4CAF50'} ${percentage}%,
            #1a1a1a ${percentage}%
        )`;
    }

    function toggleTimer() {
        if (isTimerRunning) {
            clearInterval(timerInterval);
        } else {
            timerInterval = setInterval(() => {
                if (seconds === 0) {
                    if (minutes === 0) {
                        clearInterval(timerInterval);
                        isFocusMode = !isFocusMode; // Ø§Ù„ØªØ¨Ø¯ÙŠÙ„ Ø¨ÙŠÙ† Ø§Ù„ØªØ±ÙƒÙŠØ² ÙˆØ§Ù„Ø±Ø§Ø­Ø©
                        switchMode();
                    } else {
                        minutes--;
                        seconds = 59;
                    }
                } else {
                    seconds--;
                }
                updateClockDisplay();
            }, 1000);
        }
        isTimerRunning = !isTimerRunning;
    }

    function adjustTime(value) {
        minutes = Math.max(0, minutes + value);
        seconds = 0;
        updateClockDisplay();
    }

    function resetTimer() {
        clearInterval(timerInterval);
        isFocusMode = true;
        minutes = focusTime;
        seconds = 0;
        isTimerRunning = false;
        updateClockDisplay();
    }

    function switchMode() {
        if (isFocusMode) {
            minutes = focusTime;
            showModal('ğŸ’ª ØªØ±ÙƒÙŠØ²', 'Ø­Ø§Ù† ÙˆÙ‚Øª Ø§Ù„ØªØ±ÙƒÙŠØ²!');
        } else {
            minutes = breakTime;
            showModal('ğŸ›Œ Ø±Ø§Ø­Ø©', 'Ø­Ø§Ù† ÙˆÙ‚Øª Ø§Ù„Ø±Ø§Ø­Ø©!');
        }
        seconds = 0;
        updateClockDisplay();
        toggleTimer(); // ÙŠØ¨Ø¯Ø£ Ø§Ù„ØªÙˆÙ‚ÙŠØª ØªÙ„Ù‚Ø§Ø¦ÙŠÙ‹Ø§
    }

    updateClockDisplay(); // ØªØ­Ø¯ÙŠØ« Ø§Ù„Ø¹Ø±Ø¶ Ø¹Ù†Ø¯ Ø§Ù„ØªØ­Ù…ÙŠÙ„
</script>

