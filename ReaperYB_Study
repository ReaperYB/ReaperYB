<script>
    let timerInterval;
    let minutes = 25;
    let seconds = 0;

    function updateClockDisplay() {
        document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
        document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
    }

    function startTimer() {
        clearInterval(timerInterval);
        timerInterval = setInterval(() => {
            if (seconds === 0) {
                if (minutes === 0) {
                    clearInterval(timerInterval);
                    showModal('â° Ø§Ù†ØªÙ‡Ù‰', 'Ø§Ù†ØªÙ‡Ù‰ Ø§Ù„ÙˆÙ‚Øª!');
                } else {
                    minutes--;
                    seconds = 59;
                }
            } else {
                seconds--;
            }
            updateClockDisplay();
        }, 1000);
    }

    function pauseTimer() {
        clearInterval(timerInterval);
    }

    function resetTimer() {
        clearInterval(timerInterval);
        minutes = 25;
        seconds = 0;
        updateClockDisplay();
    }

    function adjustTime(value) {
        minutes = Math.max(0, minutes + value);
        updateClockDisplay();
    }

    updateClockDisplay();

    
    </script>
    
