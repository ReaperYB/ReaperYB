    <script>
        let tasks = [];

        function addTask() {
            const taskInput = document.getElementById("task-input").value;
            const priority = document.getElementById("priority").value;
            const category = document.getElementById("category").value;
            const dueDate = document.getElementById("due-date").value;

            if (!taskInput) {
                alert("ÙŠØ±Ø¬Ù‰ Ø¥Ø¯Ø®Ø§Ù„ Ù…Ù‡Ù…Ø©!");
                return;
            }

            const task = {
                id: Date.now(),
                text: taskInput,
                priority,
                category,
                dueDate,
                completed: false
            };

            tasks.push(task);
            document.getElementById("task-input").value = "";
            renderTasks();
            updateProgress();
        }

        function renderTasks() {
            const taskList = document.getElementById("task-list");
            taskList.innerHTML = tasks.map(task => `
                <div class="task ${task.priority}">
                    <div>
                        <strong>${task.text}</strong>
                        <p>Ø§Ù„Ø£ÙˆÙ„ÙˆÙŠØ©: ${task.priority}</p>
                        <p>Ø§Ù„ÙØ¦Ø©: ${task.category}</p>
                        <p>ØªØ§Ø±ÙŠØ® Ø§Ù„Ø§Ø³ØªØ­Ù‚Ø§Ù‚: ${task.dueDate || 'ØºÙŠØ± Ù…Ø­Ø¯Ø¯'}</p>
                    </div>
                    <div class="task-actions">
                        <button onclick="toggleTask(${task.id})" class="btn">â³ ${task.completed ? 'ØºÙŠØ± Ù…ÙƒØªÙ…Ù„Ø©' : 'Ù…ÙƒØªÙ…Ù„Ø©'}</button>
                        <button onclick="deleteTask(${task.id})" class="btn delete-btn">ğŸ—‘ï¸ Ø­Ø°Ù</button>
                    </div>
                </div>
            `).join("");
        }

        function toggleTask(id) {
            const task = tasks.find(t => t.id === id);
            if (task) task.completed = !task.completed;
            renderTasks();
            updateProgress();
        }

        function deleteTask(id) {
            tasks = tasks.filter(task => task.id !== id);
            renderTasks();
            updateProgress();
        }

        function updateProgress() {
            const completedTasks = tasks.filter(t => t.completed).length;
            const progress = tasks.length ? (completedTasks / tasks.length) * 100 : 0;
            document.getElementById("daily-progress-bar").style.width = progress + "%";
            document.getElementById("progress-text").textContent = `ØªÙ… Ø¥Ù†Ø¬Ø§Ø² ${completedTasks} Ù…Ù† ${tasks.length} Ù…Ù‡Ø§Ù….`;
        }
    </script>
